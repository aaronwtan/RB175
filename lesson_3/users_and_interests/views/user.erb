<h2><%= @name.capitalize %></h2>

<section>
  <h4>Email address:</h4>
  <p><%= @email %></p>
</section>

<section>
  <h4>Interests:</h4>
  <p><%= @interests.join(', ') %></p>
</section>

<section>
  <h4>Other Users</h4>

  <ul>
    <% @other_users.each do |other_user| %>
      <li>
        <a href="<%= other_user %>"><%= other_user.capitalize %></a>
      </li>
    <% end %>
  </ul>
</section>
